<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <size
                android:width="14dp"
                android:height="14dp" />
            <stroke
                android:width="2px"
                android:color="@color/color_text" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape>
            <size
                android:width="8dp"
                android:height="8dp" />
            <solid android:color="@color/color_text" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>