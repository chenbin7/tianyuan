<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_login_reg"
    android:fitsSystemWindows="true"
    tools:context=".user.sell.SellBookActivity">

    <include layout="@layout/block_toolbar"/>

    <ImageView
        android:id="@+id/book_pic"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_marginTop="@dimen/x60"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_setting_btn"
        android:onClick="onTakePhotoBook"
        />

    <LinearLayout
        android:id="@+id/book_name_block"
        android:layout_below="@id/book_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        android:background="@drawable/win_transparency_15"
        android:orientation="vertical"
        android:divider="@drawable/linearlayout_divder_alpha_15"
        android:showDividers="middle"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y66">
            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp_16"
                android:textColor="@color/color_text"
                android:text="书名:"
                android:layout_marginLeft="@dimen/x20"
                />
            <EditText
                android:id="@+id/book_name"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x100"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/textsize_sp_16"
                android:hint="请输入书名"
                android:textColorHint="@color/color_text_hint"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y66">
            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp_16"
                android:textColor="@color/color_text"
                android:text="数量:"
                android:layout_marginLeft="@dimen/x20"
                />
            <EditText
                android:id="@+id/book_sum"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x100"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/textsize_sp_16"
                android:inputType="number"
                android:hint="请输入书本数量"
                android:text="1"
                android:textColorHint="@color/color_text_hint"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y66">
            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp_16"
                android:textColor="@color/color_text"
                android:text="价格(￥):"
                android:layout_marginLeft="@dimen/x20"
                />
            <EditText
                android:id="@+id/book_price"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x100"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/textsize_sp_16"
                android:inputType="number"
                android:hint="请输入您期望的价格"
                android:textColorHint="@color/color_text_hint"
                android:background="@null"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y66">
            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_sp_16"
                android:textColor="@color/color_text"
                android:text="类别:"
                android:layout_marginLeft="@dimen/x20"
                />
            <TextView
                android:id="@+id/book_type"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x100"
                android:gravity="center_vertical"
                android:textColor="@color/color_text"
                android:textSize="@dimen/textsize_sp_16"
                android:hint="请选择书本类型"
                android:textColorHint="@color/color_text_hint"
                android:background="@null"
                />
            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_enter"
                android:padding="@dimen/x20"
                android:onClick="onSelectotType"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="@dimen/x80"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/textsize_sp_16"
                android:textColor="@color/color_text"
                android:text="描述:"
                android:layout_marginLeft="@dimen/x20"
                />
            <EditText
                android:id="@+id/book_desc"
                android:layout_marginTop="@dimen/y45"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textColor="@color/color_text"
                android:textSize="@dimen/textsize_sp_16"
                android:hint="请输入对书本的描述"
                android:textColorHint="@color/color_text_hint"
                android:background="@null"
                />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y60"
        android:background="@drawable/wd_btn_selector"
        android:layout_marginBottom="30dp"
        android:textSize="@dimen/textsize_sp_16"
        android:textColor="@color/color_text"
        android:text="@string/commit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSellCommit"
        />


</RelativeLayout>