<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:id="@+id/wd_toast_icon"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/y68"
            android:layout_centerHorizontal="true"
            android:src="@drawable/door_confirm"
            />
        <TextView
            android:id="@+id/wd_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y105"
            android:gravity="center"
            android:textColor="@color/color_text"
            android:textSize="@dimen/textsize_sp_18"
            android:text="@string/register_succ"
            />
    </RelativeLayout>
</RelativeLayout>
