<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y213"
    >

    <RelativeLayout
        android:layout_width="@dimen/x496"
        android:layout_height="@dimen/y191"
        android:layout_centerInParent="true"
        android:background="@drawable/win_transparency_10"
        >
        <TextView
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y118"
            android:padding="@dimen/x25"
            android:textColor="@color/color_text"
            android:textSize="@dimen/textsize_sp_16"
            android:text="四川省成都市锦江区水井坊街道年丰巷53号四栋10号"
            android:lineSpacingMultiplier="1.3"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y118"
            android:background="@color/alpha_20"/>
        <RelativeLayout
            android:id="@+id/modify"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y28"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/y25"
            android:layout_marginRight="@dimen/x17"
            >
            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y22"
                android:layout_centerVertical="true"
                android:src="@drawable/edit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_sp_14"
                android:text="@string/modify"
                android:textColor="@color/color_text_hint"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y28"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/y25"
            android:layout_marginRight="@dimen/x126"
            >
            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y22"
                android:layout_centerVertical="true"
                android:src="@drawable/delete2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_sp_14"
                android:text="@string/delete"
                android:textColor="@color/color_text_hint"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>